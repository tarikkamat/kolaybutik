#!/usr/bin/env bash

if [ "$SUPERVISOR_PHP_USER" != "root" ] && [ "$SUPERVISOR_PHP_USER" != "sail" ]; then
    echo "You should set SUPERVISOR_PHP_USER to either 'sail' or 'root'."
    exit 1
fi

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

# Roadrunner binary'sini otomatik olarak kontrol et ve indir
if [ -f /var/www/html/vendor/bin/rr ]; then
    if [ ! -f /var/www/html/rr ] || [ ! -x /var/www/html/rr ]; then
        echo "Roadrunner binary bulunamadı, indiriliyor..."
        cd /var/www/html
        ./vendor/bin/rr get-binary --arch=arm64 2>/dev/null || ./vendor/bin/rr get-binary 2>/dev/null || true
        chmod +x /var/www/html/rr 2>/dev/null || true
        echo "Roadrunner binary hazır!"
    fi
fi

if [ $# -gt 0 ]; then
    if [ "$SUPERVISOR_PHP_USER" = "root" ]; then
        exec "$@"
    else
        exec gosu $WWWUSER "$@"
    fi
else
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi

